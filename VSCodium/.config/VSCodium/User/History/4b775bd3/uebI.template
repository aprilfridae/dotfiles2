:root {
    --bg_main: {{colors.surface.default.hex}};
    --bg_secondary: {{colors.surface_container.default.hex}};
    --accent: {{colors.primary.default.hex}};
    --fg_main: {{colors.on_surface.default.hex}};
    --fg_muted: {{colors.on_surface_variant.default.hex}};

    /* --- FIX FOR TRANSPARENT USERNAMES --- */
    --channels-default: var(--fg_muted);
    --interactive-normal: var(--fg_main);
    --interactive-hover: var(--accent);
    --interactive-active: #ffffff;
}