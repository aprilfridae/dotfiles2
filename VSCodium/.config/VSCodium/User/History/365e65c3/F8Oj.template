/* Matugen variables for Walker */
@define-color accent {{colors.primary.default.hex}};
@define-color bg {{colors.surface.default.hex}};
@define-color fg {{colors.on_surface.default.hex}};
@define-color selection {{colors.primary_container.default.hex}};

/* Your Obsidian Styles start here */
#window {
    background-color: alpha(@bg, 0.8);
    border: 2px solid @accent;
    border-radius: 12px;
}

#search {
    color: @fg;
    background: alpha(@selection, 0.3);
}